<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recipe_item_photo">

        <item name="cornerSizeTopLeft">@dimen/shape_image_radius</item>
        <item name="cornerSizeTopRight">@dimen/shape_image_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/shape_image_radius</item>
        <item name="cornerSizeBottomRight">@dimen/shape_image_radius</item>
    </style>

    <style name="fragment_container_card" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/fragment_container</item>
    </style>

    <style name="fragment_container" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/fragment_container_radius</item>
        <item name="cornerSizeTopRight">@dimen/fragment_container_radius</item>

    </style>

    <style name="toolbar_container">

        <item name="android:elevation">@dimen/toolbar_elevation</item>

        <item name="android:background">@drawable/toolbar_shape</item>

        <item name="android:padding">@dimen/toolbar_padding</item>
    </style>

</resources>